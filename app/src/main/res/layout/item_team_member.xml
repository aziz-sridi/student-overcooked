<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/progressTrack"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/memberAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:contentDescription="@string/member_avatar_desc"
            android:background="@drawable/bg_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Member Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/memberAvatar"
            app:layout_constraintBottom_toBottomOf="@id/memberAvatar"
            app:layout_constraintStart_toEndOf="@id/memberAvatar"
            app:layout_constraintEnd_toStartOf="@id/memberTaskCount">

            <TextView
                android:id="@+id/memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/memberEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.doe@email.com"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"/>

        </LinearLayout>

        <!-- Task Count Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/memberTaskCount"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 tasks"
            android:textSize="12sp"
            app:chipMinHeight="28dp"
            app:chipBackgroundColor="@color/mustardYellow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

