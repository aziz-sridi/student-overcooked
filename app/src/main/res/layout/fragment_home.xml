<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar (Pinned) -->
        <include layout="@layout/layout_top_bar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="100dp">

                <!-- Main Content -->
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <!-- Cooked Meter Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cookedMeterCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="24dp">

                        <!-- Cooked Level Text -->
                        <TextView
                            android:id="@+id/cookedLevelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cooked_level_cozy"
                            android:textColor="@color/successGreen"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Cooked Mascot -->
                        <ImageView
                            android:id="@+id/cookedIcon"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginTop="16dp"
                            android:contentDescription="@string/stress_level_indicator"
                            android:src="@drawable/mascot_cozy"
                            android:scaleType="fitCenter" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnChangeMascot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Change mascot"
                            app:backgroundTint="@color/burntOrange"
                            app:cornerRadius="20dp" />

                        <!-- Progress Bar -->
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/cookedProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="14dp"
                            android:layout_marginTop="20dp"
                            android:max="100"
                            android:progress="25"
                            app:indicatorColor="@color/successGreen"
                            app:trackColor="@color/progressTrack"
                            app:trackCornerRadius="7dp"
                            app:trackThickness="14dp" />

                        <!-- Stage Labels -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cozy"
                                android:textSize="11sp"
                                android:textColor="@color/successGreen" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Crispy"
                                android:textSize="11sp"
                                android:gravity="center"
                                android:textColor="@color/mustardYellow" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cooked"
                                android:textSize="11sp"
                                android:gravity="center"
                                android:textColor="@color/burntOrange" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Overcooked"
                                android:textSize="11sp"
                                android:gravity="end"
                                android:textColor="@color/tomatoRed" />
                        </LinearLayout>

                        <!-- Percentage and Status Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/cookedPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25%"
                                android:textColor="@color/textPrimary"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/cookedStatusText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cooked_status_cozy"
                                    android:textColor="@color/textPrimary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/cookedContextText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="All caught up! Time to relax. ðŸŽ‰"
                                    android:textColor="@color/textSecondary"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Stats Section -->
                <TextView
                    android:id="@+id/quickStatsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="@string/quick_stats_title"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/quickStatsRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginHorizontal="-4dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="4dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_quick_stat_card" />

                <!-- Work Now Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/workNowTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/work_now_title"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewAllTasksText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:textColor="@color/burntOrange"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground" />
                </LinearLayout>

                <!-- Empty State for Work Now -->
                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_empty_tasks"
                        android:contentDescription="@string/no_tasks_yet"
                        android:alpha="0.7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/all_caught_up"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/no_urgent_tasks"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Work Now Tasks List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/workNowRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_work_now_task" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- FAB for adding new task -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:contentDescription="@string/add_task_desc"
        app:srcCompat="@drawable/ic_add"
        app:backgroundTint="@color/burntOrange"
        app:tint="@color/white"
        app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
