<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Icon with background circle -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp">

            <View
                android:id="@+id/iconBackground"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_avatar_circle"
                android:backgroundTint="@color/burntOrange"
                android:alpha="0.15" />

            <ImageView
                android:id="@+id/statIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_task_stat"
                android:contentDescription="@string/stats_placeholder"
                app:tint="@color/burntOrange" />
        </FrameLayout>

        <!-- Value -->
        <TextView
            android:id="@+id/statValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="0/0"
            android:textColor="@color/textPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Title -->
        <TextView
            android:id="@+id/statTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Tasks"
            android:textColor="@color/textSecondary"
            android:textSize="13sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

