<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_workspace_item_title"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/resourceTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/resource_title_hint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/resourceTitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/resourceTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/resource_type_hint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/resourceTypeDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/resourceContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/resource_note_hint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/resourceContentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="top"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/filePickerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resourcePickFileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_file"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:icon="@drawable/ic_resource_file"
                app:iconGravity="start" />

            <TextView
                android:id="@+id/resourceFileSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/workspace_file_not_selected"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/resourceClearFileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_file"
                android:textColor="@color/burntOrange"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/resourceSaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            app:backgroundTint="@color/burntOrange"
            android:textColor="@color/white" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
