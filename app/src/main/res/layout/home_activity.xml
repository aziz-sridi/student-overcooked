<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Animated Cooked Meter Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cookedMeterCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Moved cooked meter content inside the card so it visually groups correctly -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Cooked Level Text -->
                    <TextView
                        android:id="@+id/cookedLevelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cooked_placeholder"
                        android:textColor="@color/burntOrange"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Cooked Emoji/Icon -->
                    <ImageView
                        android:id="@+id/cookedIcon"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/stress_level_indicator"
                        android:src="@drawable/ic_student_stressed"
                        app:layout_constraintTop_toBottomOf="@id/cookedLevelText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Linear Progress Bar (straight line) -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/cookedProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="16dp"
                        android:max="100"
                        android:progress="65"
                        app:indicatorColor="@color/burntOrange"
                        app:trackColor="@color/progressTrack"
                        app:trackCornerRadius="8dp"
                        app:trackThickness="16dp"
                        app:layout_constraintTop_toBottomOf="@id/cookedIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Progress Percentage -->
                    <TextView
                        android:id="@+id/cookedPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/percentage_placeholder"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/cookedProgressBar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Status Message -->
                    <TextView
                        android:id="@+id/cookedStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/cooked_level_medium"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        app:layout_constraintTop_toBottomOf="@id/cookedPercentage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Quick Stats Section Title -->
            <TextView
                android:id="@+id/quickStatsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_stats_title"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/cookedMeterCard"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Quick Stats Cards -->

            <!-- Active Projects Title -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/quickStatsRecycler"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quickStatsTitle"
                tools:listitem="@layout/item_quick_stat_card" />

            <TextView
                android:id="@+id/activeProjectsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active_projects"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/quickStatsRecycler"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Projects RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/projectsRecycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/activeProjectsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_project_card" />

            <TextView
                android:id="@+id/activeAssignmentsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active_assignments"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/projectsRecycler"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/assignmentsRecycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/activeAssignmentsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_assignment_card" />

            <TextView
                android:id="@+id/activeReportsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active_reports"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/assignmentsRecycler"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reportsRecycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/activeReportsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_report_card" />

            <androidx.cardview.widget.CardView
                android:id="@+id/motivationalCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/mustardYellow"
                app:layout_constraintTop_toBottomOf="@id/reportsRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/motivationalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/motivation_medium"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:padding="20dp"/>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB Menu -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/quick_actions_desc"
        app:srcCompat="@drawable/ic_add"
        app:backgroundTint="@color/burntOrange"
        app:tint="@color/white"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_task_desc"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_task"
        app:backgroundTint="@color/successGreen"
        app:tint="@color/white"
        app:fabSize="mini"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_project_desc"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_project"
        app:backgroundTint="@color/burntOrange"
        app:tint="@color/white"
        app:fabSize="mini"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddAssignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_assignment_desc"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_assignment"
        app:backgroundTint="@color/primaryBlue"
        app:tint="@color/white"
        app:fabSize="mini"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_report_desc"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_report"
        app:backgroundTint="@color/mustardYellow"
        app:tint="@color/textPrimary"
        app:fabSize="mini"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>