<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/cardBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/taskCheckbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/custom_checkbox"
            android:contentDescription="@string/mark_complete_desc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Priority Indicator -->
        <View
            android:id="@+id/priorityIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/errorAlert"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/taskCheckbox"/>

        <!-- Task Title -->
        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Complete Project Task"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/taskCheckbox"
            app:layout_constraintStart_toEndOf="@id/priorityIndicator"
            app:layout_constraintEnd_toStartOf="@id/taskMenu"/>

        <!-- Course/Project Tag -->
        <com.google.android.material.chip.Chip
            android:id="@+id/taskCourseChip"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web Development"
            android:textSize="12sp"
            app:chipMinHeight="24dp"
            app:chipBackgroundColor="@color/progressTrack"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/taskTitle"
            app:layout_constraintStart_toStartOf="@id/taskTitle"/>

        <!-- Deadline -->
        <LinearLayout
            android:id="@+id/deadlineLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/taskCourseChip"
            app:layout_constraintStart_toStartOf="@id/taskTitle">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/textSecondary"
                android:contentDescription="@string/deadline_icon_desc"/>

            <TextView
                android:id="@+id/taskDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Dec 15, 11:59 PM"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"/>

        </LinearLayout>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Not Started"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_status_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            app:layout_constraintTop_toBottomOf="@id/deadlineLayout"
            app:layout_constraintStart_toStartOf="@id/taskTitle"/>

        <!-- Menu Button -->
        <ImageView
            android:id="@+id/taskMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="@string/task_menu_desc"
            app:tint="@color/textSecondary"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

