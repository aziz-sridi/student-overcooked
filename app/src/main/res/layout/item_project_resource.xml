<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/cardBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Resource Type Icon -->
        <ImageView
            android:id="@+id/resourceIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="@string/resource_icon_desc"
            android:background="@drawable/bg_avatar_circle"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Resource Title -->
        <TextView
            android:id="@+id/resourceTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Project Documentation"
            app:layout_constraintTop_toTopOf="@id/resourceIcon"
            app:layout_constraintStart_toEndOf="@id/resourceIcon"
            app:layout_constraintEnd_toStartOf="@id/resourceMenuButton" />

        <!-- Resource Subtitle / Content Preview -->
        <TextView
            android:id="@+id/resourceSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="requirements.pdf - 2.4 MB"
            app:layout_constraintTop_toBottomOf="@id/resourceTitle"
            app:layout_constraintStart_toStartOf="@id/resourceTitle"
            app:layout_constraintEnd_toEndOf="@id/resourceTitle" />

        <!-- Type Badge -->
        <TextView
            android:id="@+id/resourceTypeBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/bg_status_badge"
            android:visibility="visible"
            tools:text="FILE"
            app:layout_constraintTop_toBottomOf="@id/resourceSubtitle"
            app:layout_constraintStart_toStartOf="@id/resourceTitle" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/resourceTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textSize="11sp"
            tools:text="Dec 3, 2024"
            app:layout_constraintBaseline_toBaselineOf="@id/resourceTypeBadge"
            app:layout_constraintEnd_toStartOf="@id/resourceMenuButton" />

        <!-- Menu/Delete Button -->
        <ImageButton
            android:id="@+id/resourceMenuButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/textSecondary"
            android:contentDescription="@string/delete_resource_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Open/Download indicator for files -->
        <ImageView
            android:id="@+id/resourceOpenIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/textSecondary"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
