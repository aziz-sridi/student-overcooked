<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/overcooked_logo"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/resetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"/>

        <TextView
            android:id="@+id/resetSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_subtitle"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            app:startIconDrawable="@drawable/ic_mail">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/resetEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendResetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_reset_link"
            android:layout_marginTop="24dp"
            android:padding="12dp"/>

        <LinearLayout
            android:id="@+id/resetConfirmationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/resetConfirmationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_email_sent_title"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/resetConfirmationMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_email_sent_message"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/openEmailButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_email_app"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_login"
            android:textColor="@color/primaryAction"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
